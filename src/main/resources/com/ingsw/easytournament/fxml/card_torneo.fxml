<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="vbox_principale" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" onMouseClicked="#visualizzaTorneo" styleClass="card_torneo" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ingsw.easytournament.controller.CardTorneoController">
   <children>
      <VBox alignment="CENTER_LEFT" VBox.vgrow="ALWAYS">
         <children>
            <Label fx:id="label_nome_torneo" text="torneo">
               <VBox.margin>
                  <Insets left="10.0" top="30.0" />
               </VBox.margin>
            </Label>
            <Label fx:id="label_data" text="date">
               <VBox.margin>
                  <Insets left="10.0" />
               </VBox.margin>
               <padding>
                  <Insets top="5.0" />
               </padding>
            </Label>
         </children>
      </VBox>
      <VBox VBox.vgrow="ALWAYS">
         <VBox.margin>
            <Insets bottom="20.0" top="20.0" />
         </VBox.margin></VBox>
      <HBox alignment="BOTTOM_RIGHT" spacing="10.0">
         <children>
            <Button fx:id="button_modifica" mnemonicParsing="false" onAction="#modificaTorneo" styleClass="btn_card_modifica" text="Modifica">
               <graphic>
                  <ImageView fitHeight="12.0" fitWidth="12.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../imgs/button_modifica.png" />
                     </image>
                  </ImageView>
               </graphic>
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin></Button>
            <Button fx:id="button_elimina" mnemonicParsing="false" onAction="#eliminaTorneo" text="Elimina">
               <graphic>
                  <ImageView fitHeight="12.0" fitWidth="12.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../imgs/button_delete.png" />
                     </image>
                  </ImageView>
               </graphic>
               <styleClass>
                  <String fx:value="btn_card_elimina" />
                  <String fx:value="btn_card_modifica" />
               </styleClass>
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin></Button>
         </children>
         <VBox.margin>
            <Insets bottom="15.0" right="10.0" />
         </VBox.margin>
      </HBox>
   </children>
</VBox>
