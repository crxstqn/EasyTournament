<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="300.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ingsw.easytournament.controller.visualizza_torneo.AggiornaIncontroController">
   <children>
      <HBox alignment="CENTER" prefHeight="62.0" prefWidth="500.0">
         <children>
            <Label fx:id="label_titolo" text="Aggiorna incontro" />
         </children>
      </HBox>
      <HBox alignment="CENTER" VBox.vgrow="ALWAYS">
         <children>
            <Label fx:id="label_squadra_1" text="Label">
               <HBox.margin>
                  <Insets left="15.0" right="15.0" />
               </HBox.margin>
            </Label>
            <Spinner fx:id="spinner_squadra_1" prefHeight="26.0" prefWidth="60.0">
               <HBox.margin>
                  <Insets right="15.0" />
               </HBox.margin>
            </Spinner>
            <Label text="-">
               <HBox.margin>
                  <Insets right="15.0" />
               </HBox.margin>
            </Label>
            <Spinner fx:id="spinner_squadra_2" prefHeight="26.0" prefWidth="60.0">
               <HBox.margin>
                  <Insets right="15.0" />
               </HBox.margin>
            </Spinner>
            <Label fx:id="label_squadra2" text="Label">
               <HBox.margin>
                  <Insets right="15.0" />
               </HBox.margin>
            </Label>
         </children>
      </HBox>
      <HBox alignment="BOTTOM_RIGHT" prefHeight="41.0" prefWidth="500.0">
         <children>
            <Button fx:id="button_raggiorna_risultato" mnemonicParsing="false" onAction="#aggiorna_risultato" text="Aggiorna risultato">
               <HBox.margin>
                  <Insets bottom="10.0" right="10.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
   </children>
</VBox>
